<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <xyz.yuersan.schoolnfo.util.CircleImageView
        android:id="@+id/img_class_defaultic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_classgroup_defaultic"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/text_classgroup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_class_defaultic"
        android:layout_marginStart="15dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/text_classgroup_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_classgroup_name"
        app:layout_constraintLeft_toRightOf="@+id/img_class_defaultic"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:text="陈老师:4月26日作业"
        android:textColor="@color/gray"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/text_classgroup_lasttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text_classgroup_name"
        app:layout_constraintRight_toRightOf="parent"
        android:text="15:26"
        android:textColor="@color/gray"
        android:textSize="12sp"/>

</android.support.constraint.ConstraintLayout>